@model IEnumerable<AdminPresentationLayer.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">Add new product</a>

        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Product name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Stock
                        </th>
                        <th>
                            imageURL
                        </th>
                        <th>
                            Register date.
                        </th>
                        <th>
                            Buttons
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.idProduct</th>
                            <th>@item.nameProduct</th>
                            <th>@item.info</th>
                            <th>@item.Brand.info</th>
                            <th>@item.Category.info</th>
                            <th>@item.price</th>
                            <th>@item.stockQuantity</th>
                            <th>@item.imageURL</th>
                            <th>@item.registerDate</th>
                            <th class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Upsert" asp-route-idProduct="@item.idProduct" class="btn btn-outline-primary mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-idProduct="@item.idProduct" class="btn btn-outline-danger mx-2">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </a>
                                </div>
                            </th>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <p>There are not Products in the database.</p>
        }
    </div>
</div>


