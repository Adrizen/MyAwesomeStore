
@model IEnumerable<AdminPresentationLayer.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Brands</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">Add new brand</a>
                
        </div>
        <br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Brand name
                        </th>
                        <th>
                            
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th width="50%">@item.idBrand</th>
                            <th width="30%">@item.info</th>
                            <th class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Brand" asp-action="Edit" asp-route-idBrand="@item.idBrand" class="btn btn-outline-primary mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i> Edit
                                        </a>
                                    <a asp-controller="Brand" asp-action="Delete" asp-route-idBrand="@item.idBrand" class="btn btn-outline-danger mx-2">
                                        <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                </div>
                            </th> 
                        </tr>
                    }
                </tbody>

            </table>
        } else
        {
            <p>There are not brands in the database.</p>
        }
    </div>
</div>

